<html>
	<head>
		<script type="text/javascript" src="js/jquery-1.11.3.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="js/index.js"></script>

		<link rel="stylesheet" type="text/css" href="css/style.css">
	</head>

	<body>
		<table class="settings">			
			<tr>
				<td>Countdown Title:</td> 
				<td><input type="text" name="countdown-title" value="<%=countdownTitle%>"></td>
			</tr>

			<tr>
				<td>Time Title:</td>
				<td><input type="text" name="time-title" value="<%=timeTitle%>"></td>
			</tr>

			<tr>
				<th colspan="2">Countdown Time: <br /></th>
			</tr>
			<tr>
				<td>Hours:</td>
				<td><input type="text" name="countdown-hours" value="<%=countdownHours%>"></td>
			</tr>
			<tr>
				<td>Minutes:</td>
				<td><input type="text" name="countdown-minutes" value="<%=countdownMinutes%>"></td>
			</tr>
			<tr>
				<td>Seconds:</td>
				<td><input type="text" name="countdown-seconds" value="<%=countdownSeconds%>"></td>
			</tr>

			<tr>
				<td colspan="2">
					<button id="save">Save</button>
					<button id="cancel">Cancel</button>
				</td>
			</tr>
		</table>
	</body>
</html>
